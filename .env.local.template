# Database Configuration (Neon Postgres)
# Get this from Vercel Dashboard after adding Neon integration
DATABASE_URL="postgresql://username:password@host.neon.tech/dbname?sslmode=require"

# OpenRouter API Configuration
# Get your API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY="your_openrouter_api_key_here"

# NextAuth Configuration
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your_nextauth_secret_here"
NEXTAUTH_URL="http://localhost:3000"

# Vercel Blob Storage
# Auto-generated when you add Blob storage in Vercel Dashboard
BLOB_READ_WRITE_TOKEN="your_blob_token_here"

# JWT Configuration
# Generate a secret: openssl rand -base64 32
JWT_SECRET="your_jwt_secret_here"

# Application Configuration
NEXT_PUBLIC_APP_NAME="Private Fund Analysis Platform"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="false"
NEXT_PUBLIC_MAX_UPLOAD_SIZE_MB="50"
